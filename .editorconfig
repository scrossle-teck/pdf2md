# EditorConfig helps maintain consistent coding styles across editors
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# Preserve trailing spaces used for line breaks in Markdown
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[*.ps1]
indent_style = space
indent_size = 4
